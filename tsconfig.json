{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["docz", "example"]
}
